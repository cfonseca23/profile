{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Blazor WASM",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": ["run", "--launch-profile", "https"],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "postDebugTask": "cleanup-dotnet"
    }
  ]
}
