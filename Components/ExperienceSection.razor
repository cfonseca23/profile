@using Profile.Models

<section class="container mb-5">
    <h2 class="h4 mb-4 text-dark">
        ðŸ’¼ Experiencia
    </h2>
    <div class="row">
        @foreach (var exp in Experiences)
        {
            <div class="col-12 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start flex-wrap">
                            <div>
                                <h3 class="h5 mb-1">@exp.Role</h3>
                                <p class="text-secondary mb-1 fw-semibold">@exp.Company</p>
                                <p class="text-muted small mb-2">@exp.Industry</p>
                            </div>
                            <span class="badge bg-secondary">@exp.Period</span>
                        </div>
                        @if (exp.Technologies.Count > 0)
                        {
                            <div class="d-flex flex-wrap gap-1 mt-2">
                                @foreach (var tech in exp.Technologies)
                                {
                                    <span class="badge text-secondary bg-light border">@tech</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@code {
    [Parameter]
    public List<Experience> Experiences { get; set; } = [];
}
