@using Profile.Models

<section class="container mb-5">
    <h2 class="h4 mb-4 text-dark">
        ğŸ› ï¸ Habilidades
    </h2>
    <div class="row g-3">
        @foreach (var skill in Items)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title h6 text-secondary fw-bold mb-3">@skill.Category</h3>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var item in skill.Items)
                            {
                                <span class="badge bg-dark bg-opacity-75">@item</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@code {
    [Parameter]
    public List<Skill> Items { get; set; } = [];
}
