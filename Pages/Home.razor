@page "/"
@inject CvService CvService

<PageTitle>Cristhian Fonseca</PageTitle>

@if (_cv is null)
{
    <p>Cargando...</p>
}
else
{
    <div class="cv-container">
        <Header Personal="@_cv.Personal" />
        <About Summary="@_cv.GetSummary()" />
        <Skills Items="@_cv.Skills" />
        <ExperienceSection Experiences="@_cv.Experiences" />
        <EducationSection Items="@_cv.Education" />
        <Certifications Items="@_cv.Certifications" />
    </div>
}

@code {
    private CvData? _cv;

    protected override async Task OnInitializedAsync()
    {
        _cv = await CvService.GetCvDataAsync();
    }
}
